@model BigNumbersMVC.Models.BigNumbersSumViewModel
@{
    ViewBag.Title = "Sum";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Sum", "Sum", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Number1, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number1, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Number1)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Number2, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Number2, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Number2)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Result, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DisplayTextFor(m => m.Result)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Calculate" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
